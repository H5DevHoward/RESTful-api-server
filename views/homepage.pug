extends layout

mixin boxItems(illustrations)
  .box-wrapper
    each boxes in illustrations
      each item in boxes
        .box.preload(style= item.color ? 'background-color:'+item.color : '')
          img(src=item.bg)
          .content
            .icon.preload   
                img(src=item.icon)
            .text= item.text

    
mixin menuItems(footMenu)
    each menu, i in footMenu
        if i != footMenu.length-1
            li.menu-item #{menu}<span class='separateline'>|</span>
        else
            li.menu-item= menu
            
block content
    .sign-in-up-wrapper
        .navbar
            .logo-wrapper
                .logo.preload
                    img(src="/images/logo.png")
                .text-wrapper
                    h1.headline kunrp
                    h1.subline 昆瑞鹏智能管理平台
            .back-wrapper
                span.backhome 返回首页
        .content-wrapper
            .left-wrapper
                +boxItems(illustrations)
            .right-wrapper
                include signin.pug
                include signup.pug
        .footbar
            ul.menu-wrapper
                +menuItems(footMenu)
